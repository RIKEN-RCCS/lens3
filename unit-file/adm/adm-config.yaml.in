gunicorn:
    bind: "[::]:8001"
    workers: 24
    timeout: 120
    log_syslog_facility: LOCAL7
    reload: yes

redis:
    host: @REDIS_HOST@
    port: @REDIS_PORT@
    password: @REDIS_PASSWORD@

multiplexer:
    facade_hostname: @FACADE_HOSTNAME@

controller:
    max_lock_duration: 60

system_settings:
    max_zone_per_user: 3
    max_direct_hostnames_per_user: 2
    default_zone_lifetime: 630720000
    allowed_maximum_zone_exp_date: 2279404800
    endpoint_url: https://{hostname}/
    direct_hostname_validator: flat
    direct_hostname_domain: @DIRECT_HOSTNAME_DOMAIN@
    reserved_hostnames:
        - @RESERVED_HOSTNAME@
    probe_access_timeout: 60

webui:
    trusted_proxies:
        - @REVERSE_PROXY_ADDRESS@
    CSRF_secret_key: @CSRF_SECRET_KEY@

syslog:
    facility: @FACILITY@
    priority: @PRIORITY@
