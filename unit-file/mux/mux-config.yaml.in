gunicorn:
    bind: "[::]:8000"
    workers: 2
    threads: 40
    timeout: 60
    log_syslog_facility: LOCAL7
    reload: yes

redis:
    host: @REDIS_HOST@
    port: @REDIS_PORT@
    password: @REDIS_PASSWORD@

multiplexer:
    port: @SERVER_PORT@
    facade_hostname: @FACADE_HOSTNAME@
    trusted_proxies:
        - @REVERSE_PROXY_ADDRESS@
        - @API_ADDRESS@
    mux_endpoint_update: 30
    forwarding_timeout: 60

controller:
    port_min: @PORT_MIN@
    port_max: @PORT_MAX@
    sudo: /usr/bin/sudo
    watch_interval: 30
    heartbeat_miss_tolerance: 3
    heartbeat_timeout: 20
    minio_start_timeout: 60
    minio_setup_timeout: 60
    minio_stop_timeout: 20

minio:
    minio: @MINIO@
    minio_http_trace: @MINIO_HTTP_TRACE@
    mc: @MC@

syslog:
    facility: @FACILITY@
    priority: @PRIORITY@
